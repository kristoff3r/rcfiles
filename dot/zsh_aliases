# Navigation
alias ll='ls -la'

# Apt
alias i='sudo apt-get install'
alias s='apt-cache search'
alias u='sudo apt-get upgrade'

# Git
alias gp='git pull'
alias gpp='git pull && git push'
alias gpu='git push'
alias ga='git add'
alias gc='git commit -m'
alias gs='git status'
alias gl='git log'
alias gd='git diff'

# Fasd
eval "$(fasd --init auto)"
source $HOME/.fasdrc

# Do ls every time you cd
function chpwd() {
    emulate -LR zsh
        ls
}

# Mosml
alias mosml='rlwrap mosml -P full'


# Misc
alias gdb='gdb -n -x ~/.gdbinit'

function pdf() {
    evince $1 &
    disown
}
