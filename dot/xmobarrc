                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run Com "battery_status" [] "power" 10
                    , Run Com "wireless_status" [] "wireless" 10
                    , Run Com "volume_status" [] "vol" 10
                    , Run Com "apt_status &" [] "apt" 3000
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ %apt% <fc=#429942>|</fc> %wireless% <fc=#429942>|</fc> %vol% <fc=#429942>|</fc> %power% <fc=#429942>|</fc> %cpu% <fc=#429942>|</fc> %memory% <fc=#429942>|</fc> %date%"
